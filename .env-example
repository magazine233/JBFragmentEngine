# .env.example
# Copy this file to .env and update with your values

# Typesense Configuration
TYPESENSE_API_KEY=your-secure-api-key-here

# Scraper Configuration
TARGET_URL=https://my.gov.au
MAX_DEPTH=3
MAX_LINKS_PER_PAGE=10
CONCURRENCY=5

# API Configuration
PORT=3000
CORS_ORIGIN=*
NODE_ENV=production

# LLM Providers
# Local Ollama endpoint
# - Linux Docker default bridge: http://172.17.0.1:11434
# - Mac/Windows Docker: http://host.docker.internal:11434
OLLAMA_URL=http://172.17.0.1:11434

# Direct API Keys (used when LiteLLM is not configured)
OPENAI_API_KEY=

# LiteLLM Feature Flag - set to false to disable LiteLLM and use direct provider calls
ENABLE_LITELLM=false

# LiteLLM Configuration (when ENABLE_LITELLM=true)
# Docker Compose automatically sets LITELLM_URL=http://litellm:4000
# Only override these if running outside Docker or using external LiteLLM
LITELLM_URL=
LITELLM_API_KEY=

# Additional API keys for LiteLLM external providers (optional)
ANTHROPIC_API_KEY=
GROQ_API_KEY=
